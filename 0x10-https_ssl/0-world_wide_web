#!/usr/bin/env bash
# add other subdomains to make our life easier, and write a Bash script that will display information about subdomains.
domain=$1
SUBDOMAINS="www 50865-lb-01 50865-web-01 50865-web-02"

function show_all() {
    for arg in $SUBDOMAINS
    do
        echo -n "The subdomain $arg is a "
        dig "$arg"."$domain" | grep -A1 'ANSWER SECTION:' | tail -n1 | awk '{print $4 " record and points to " $5}'
    done
}

if [ $# -eq 2 ]
then
    echo -n "The subdomain $2 is a "
    dig "$2"."$domain" | grep -A1 'ANSWER SECTION:' | tail -n1 | awk '{print $4 " record and points to " $5}'
else
    show_all
fi
